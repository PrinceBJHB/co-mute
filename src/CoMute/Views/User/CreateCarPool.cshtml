@{
    ViewBag.Title = "CreateCarPool";
}

@if (Session["logged"] != null)
{

<form id="carpool">
    <h2>Create Car-Pool</h2>

    <div id="error" class="row row-margin hidden">
        <div class="col-md-4 col-md-offset-4 alert alert-danger" style="min-width:50%;">
            <p></p>
        </div>
    </div>

    <div class="form-group">
        <label for="name">CarPool Name</label>
        <input type="text" id="cname" class="form-control" placeholder="Name"
               required autofocus>
    </div>

    <div class="form-group">
        <label for="name">Departure Time</label>
        <input type="text" id="dtime" class="form-control" 
               placeholder="HH:MM e.g. 10:30" pattern="^[0-2][0-9]:[0-5][0-9]$"
               required autofocus>
    </div>

    <div class="form-group">
        <label for="surname">Arrival Time</label>
        <input  type="text" id="atime" class="form-control" placeholder="HH:MM e.g. 10:30"
               pattern="^[0-2][0-3]:[0-5][0-9]$" required>
    </div>

    <div class="form-group">
        <label for="phone">Origin</label>
        <input  type="text" id="origin" class="form-control" placeholder="e.g. Rosebank" required>
    </div>

    <div class="form-group">
        <label for="email">Days Available</label>
        <input type="text" id="availabled" class="form-control" placeholder="e.g. Monday - Wednesday, Friday">
    </div>

    <div class="form-group">
        <label for="destination">Destination</label>
        <input type="text" id="destination" class="form-control" placeholder="e.g. Cape Town" required>
    </div>

    <div class="form-group">
        <label for="availables">Available Seats</label>
        <input type="number" id="availables" class="form-control" placeholder="e.g. 4"
                pattern="[0-100]">
    </div>

    <div class="form-group">
        <label for="old-password">Owner / Leader</label>
        <input type="text" id="owner" class="form-control" placeholder="Name" required>
    </div>

    <div class="form-group">
        <label for="owner">Notes</label>
        <input type="text" id="notes" class="form-control" placeholder="e.g. Type of car etc.">
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit" id="sign-in">Create</button>
    </div>
</form>

}
else
{
    <div id="error" class="row row-margin hidden">
        <div class="col-md-4 col-md-offset-4 alert alert-danger" style="min-width:50%;">
            <p> Please Log in to access this page</p>
        </div>
    </div>
}

@section scripts {
    <script type="text/javascript" src="~/Content/js/carpooling.js"></script>
}