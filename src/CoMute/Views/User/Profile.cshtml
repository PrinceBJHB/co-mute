@{
    ViewBag.Title = "Profile";
}

@if (Session["logged"] != null)
{

<form id="update">
    <h2>Register</h2>

    <div id="error" class="row row-margin hidden">
        <div class="col-md-4 col-md-offset-4 alert alert-danger" style="min-width:50%;">
            <p></p>
        </div>
    </div>

    <div class="form-group">
        <label for="name">Name</label>
        <input value="@Session["username"]" type="text" id="name" class="form-control" placeholder="First name" required autofocus>
    </div>

    <div class="form-group">
        <label for="surname">Surname</label>
        <input  value="@Session["surname"]" type="text" id="surname" class="form-control" placeholder="Surname" required>
    </div>

    <div class="form-group">
        <label for="phone">Phone</label>
        <input  value="@Session["phone"]" type="text" id="phone" class="form-control" placeholder="Phone number" required>
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input  value="@Session["email"]" type="email" id="email" class="form-control" placeholder="Email address" required>
    </div>

    <div class="form-group">
        <label for="old-password">Old Password</label>
        <input type="password" id="old-password" class="form-control" placeholder="Password">
    </div>

    <div class="form-group">
        <label for="new-password">New Password</label>
        <input type="password" id="new-password" class="form-control" placeholder="Confirm password">
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit" id="sign-in">Update</button>
    </div>
</form>

}
else
{
    <div id="error" class="row row-margin hidden">
        <div class="col-md-4 col-md-offset-4 alert alert-danger" style="min-width:50%;">
            <p> Please Log in to access this page</p>
        </div>
    </div>
}

@section scripts {
    <script type="text/javascript" src="~/Content/js/profile.js"></script>
}