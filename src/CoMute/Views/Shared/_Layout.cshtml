<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Co-Mute</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Co-Mute", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["logged"] != null)
                    {                        
                        <li>@Html.ActionLink("Create CarPool", "CreateCarPool", "User")</li>
                        <li>@Html.ActionLink("All CarPools", "Register", "Home")</li>
                        <li>@Html.ActionLink("Joined CarPools", "Index", "Search")</li>
                        <li>@Html.ActionLink("Created CarPools", "About", "Home")</li>
                       
                    }
                    else
                    {
                        <li>@Html.ActionLink("My Profile", "Profile", "User")</li>
                        <li>@Html.ActionLink("Register", "Register", "Home")</li>
                        <li>@Html.ActionLink("Search", "Index", "Search")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                    }
                </ul>

                @if (Session["logged"] != null)
                {
                    <ul class="nav navbar-nav"  style="float:right">
                        <li>
                            @Html.ActionLink(Session["username"].ToString(), "Profile", "User")
                        </li>
                        <li style="margin-right:0px" >
                            <a href="#" id="logout" >Logout</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="container">
            <p>&copy; @DateTime.Now.Year - Co-Mute</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
