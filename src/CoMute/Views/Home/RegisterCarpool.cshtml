@using CoMute.Web.Models.Dto
@model RegisterCarPoolRequest
@{
    ViewBag.Title = "Register Carpool";
}

<form id="register">
    <h2>@ViewBag.Title</h2>

    <div id="error" class="row row-margin hidden">
        <div class="col-md-4 col-md-offset-4 alert alert-danger">
            <p></p>
        </div>
    </div>

    <div id="success" class="row row-margin hidden">
        <div class="col-md-4 col-md-offset-4 alert alert-success">
            <p></p>
        </div>
    </div>

    <div class="form-group">
        <label for="destination">Destination</label>
        <input type="text" id="destination" class="form-control" placeholder="Destination" required autofocus>
    </div>

    <div class="form-group">
        <label for="origin">Origin</label>
        <input type="text" id="origin" class="form-control" placeholder="Origin" required>
    </div>

    <div class="form-group">
        <label for="departureTime">Departure Time</label>
        <input type="time" id="departureTime" class="form-control" placeholder="Departure Time">
    </div>

    <div class="form-group">
        <label for="expectedArrivalTime">Expected Arrival Time</label>
        <input type="time" id="expectedArrivalTime" class="form-control" placeholder="Expected Arrival Time" required>
    </div>

    <div class="form-group">
        @Html.EnumDropDownListFor(model => model.DaysAvailable)
        @*<label for="daysAvailable">Days Available</label>
        <input type="text" id="daysAvailable" class="form-control" placeholder="Days Available" required>*@
    </div>

    <div class="form-group">
        <label for="notes">Notes</label>
        <input type="text" id="notes" class="form-control" placeholder="Notes">
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit" id="sign-in">Register</button>
    </div>
</form>

@section scripts {
    <script src="~/Content/js/registerCarpool.js"></script>
}