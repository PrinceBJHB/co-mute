@using CoMute.Web.Models
@model UpdatePasswordRequest

<div class="form-horizontal">
    <style type="text/css">
        .validation-summary-errors
        {
            display: block;
            font-weight: bold;
            color: #53b65a;
        }
    </style>

    @using (Ajax.BeginForm(
                actionName: "SendUpdatePassword",
                controllerName: "Profile",
                routeValues: Model,
                ajaxOptions: new AjaxOptions { UpdateTargetId = "UpdatePassword" },
                htmlAttributes: new { Class = "form-horizontal" }))
    {
        <h4>Update password</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-sm-4 col-md-2" })
            <div class="col-sm-8 col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { type = "password", id = "password", @class = "form-control", placeholder = "Password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NewPassword, htmlAttributes: new { @class = "control-label col-sm-4 col-md-2" })
            <div class="col-sm-8 col-md-10">
                @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { type = "password", id = "newPassword", @class = "form-control", placeholder = "New password" } })
                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmNewPassword, htmlAttributes: new { @class = "control-label col-sm-4 col-md-2" })
            <div class="col-sm-8 col-md-10">
                @Html.EditorFor(model => model.ConfirmNewPassword, new { htmlAttributes = new { type = "password", id = "confirmNewPassword", @class = "form-control", placeholder = "Confirm new password" } })
                @Html.ValidationMessageFor(model => model.ConfirmNewPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-md-offset-2 col-sm-8 col-md-10">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-md-offset-2 col-sm-8 col-md-10">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>
    }
</div>
